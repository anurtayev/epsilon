{
  "baseUrl": "./src",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2020"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
