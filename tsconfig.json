{
  "baseUrl": "./src",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"]
}
